<form action="/records/{{record._id}}?_method=PUT" method="POST">
	<div class="mt-5 row">
		<div class="col-md-6 m-auto">
			<div class="card card-body">
				<h3 class="text-center mt-3">請修改你的支出</h3>

				<form action="/records" method="POST" >
					<div class="form-group">
						<label for="name">名稱 :</label>
						<input type="text" id="name" name='name' class="form-control" placeholder="Enter Name" value="{{record.name}}">
					</div>	
					<div class="form-group">
						<label for="date">日期 :</label>
						<input type="text" id="date" name='date' class="form-control" placeholder="{{record.date}}" value="{{record.date}}">
					</div>	
					<div class="form-group">
						<label for="category">類別 :</label>
						<select id="category" class="form-control" name="category">
		                <option value="">請選擇</option>
		                <option value="1"{{#is record.categoryId 1 }} selected {{/is}}>家居物業</option>
		                <option value="2" {{#is record.categoryId 2 }} selected {{/is}}>交通出行</option>
		                <option value="3" {{#is record.categoryId 3 }} selected {{/is}}>休閒娛樂</option>
		                <option value="4" {{#is record.categoryId 4 }} selected {{/is}}>餐飲食品</option>
		                <option value="5" {{#is record.categoryId 5 }} selected {{/is}}>其他</option>
		              </select>
					</div>	
					<div class="form-group">
						<label for="amount">金額 :</label>
						<input type="number" id="amount" name='amount' class="form-control" placeholder="$" value="{{record.amount}}">
					</div>	


					<button type="submit" class="btn btn-primary btn-block">修改支出</button>
				</form>
				<a href="/" class="btn btn-info btn-block">放棄修改</a>
			</div>
		</div>
	</div>	
</form>

