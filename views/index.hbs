<div class="row">
	<div class="col-md-6 m-auto">
			<form action="/sort">
				<div class="form-group">
					<label for="sort">類別 :</label>
					<select id="sort" class="form-control" name="category" onchange=";this.form.submit();">
	                <option value="not-change">請選擇</option>
	                <option value="a" {{#is sortInput 家居物業 }} selected {{/is}}>家居物業</option>
	                <option value="交通出行" {{#is sortInput 交通出行 }} selected {{/is}}>交通出行</option>
	                <option value="休閒娛樂" {{#is sortInput 休閒娛樂 }} selected {{/is}}>休閒娛樂</option>
	                <option value="餐飲食品" {{#is sortInput 餐飲食品 }} selected {{/is}}>餐飲食品</option>
	                <option value="其他" {{#is sortInput 其他 }} selected {{/is}}>其他</option>
	              </select>
				</div>	
				<div class="form-group">
					<p>總金額 :</p>
				</div>	
			</form>
			<ul class="list-group">
				{{#each records}}
				<li class="list-group-item">
					<div class='row'>
						<div class="col-auto mr-auto">
							<input style="vertical-align: middle;"type="checkbox" name="isDone" {{#if this.isDone }} checked {{/if}} disabled>
							<h4 style="display:inline; vertical-align: middle;">
								{{this.name}}
							</h4>
						</div>
						<div class="col-auto">
							<a class='btn btn-primary' href="./records/{{this._id}}">Details</a>	
							<a class='btn btn-success' href="./records/{{this._id}}/edit">Edit</a>
							<form action="./records/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
								<button class='btn btn-danger' type="submit">Delete</button>
							</form>
						</div>
					</div>
				</li>
				{{/each}}
			</ul>
			<a href="/records/new" class="btn btn-primary btn-block">新增支出</a>
	</div>
</div>	